{
  "name": "auto-sort-import",
  "displayName": "auto-sort-import",
  "description": "",
  "version": "0.0.3",
  "publisher": "ShunJun",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/Shunjun/autoFixImport",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shunjun/autoFixImport"
  },
  "activationEvents": [
    "*",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onCommand:extension.fixImport"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Auto Sort Import",
      "properties": {
        "autoSortImport.blank": {
          "type": "boolean",
          "default": true,
          "description": "使用空行分隔不同类型的import, 默认: true"
        },
        "autoSortImport.sort": {
          "type": "array",
          "default": [
            "external",
            "absolute",
            "relative",
            "style"
          ],
          "description": "Import 排序规则,默认:['external','absolute','relative','style']"
        },
        "autoSortImport.removeAnnotation": {
          "type": "boolean",
          "default": false,
          "description": "移除 Import 块内的注释, 默认:false"
        },
        "autoSortImport.suffix": {
          "type": "array",
          "default": [
            "js",
            "mjs",
            "jsx",
            "ts",
            "tsx"
          ],
          "description": "启用的文件类型, 默认:['js','mjs','jsx','ts','tsx']"
        }
      }
    },
    "commands": [
      {
        "command": "extension.fixImport",
        "title": "Fix Import"
      }
    ]
  },
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.65.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "ts-loader": "^9.2.8",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "@vscode/test-electron": "^2.1.3"
  }
}
